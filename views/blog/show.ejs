<%- include("../partials/header") %>

<div class = "ui main text container segment">
  <div class = "ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src = "<%= blog.image %>">
      <div class = "content">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body %></p> 
      </div>
      <% if(blog.owner.id.equals(currUser._id)){ %>
        <div class = "ui violet big basic button"><a href="/blogs/<%= blog._id %>/edit">EDIT</a></div>
          <form action = "/blogs/<%= blog._id %>?_method=DELETE" method = "POST" style="text-align:right;float:left;">
            <input class = "ui red big basic button" type = "submit" value="DELETE">
          </form>
        </div>
      <% } %>
  </div>
</div>

<%- include("../partials/footer") %>